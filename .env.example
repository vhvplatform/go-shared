# ========================================
# Environment & Logging
# ========================================
ENVIRONMENT=development
LOG_LEVEL=info

# ========================================
# Server Configuration
# ========================================
SERVER_PORT=8080
HTTP_PORT=8080
GRPC_PORT=50051
SHUTDOWN_TIMEOUT=10

# ========================================
# MongoDB
# ========================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=saas_framework
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10

# ========================================
# Redis
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# RabbitMQ
# ========================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=saas_events
RABBITMQ_QUEUE_PREFIX=saas

# ========================================
# JWT Configuration
# ========================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ========================================
# SMTP Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=VHV Platform
SMTP_POOL_SIZE=10

# ========================================
# Email Service (Notification Service)
# ========================================
EMAIL_WORKERS=5

# ========================================
# SMS Configuration (Notification Service)
# ========================================
SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
AWS_SNS_ARN=
AWS_REGION=us-east-1

# ========================================
# OAuth Configuration
# ========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# ========================================
# CORS Configuration
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID

# ========================================
# Service URLs (API Gateway)
# ========================================
AUTH_SERVICE_URL=http://localhost:8081
USER_SERVICE_URL=http://localhost:8082
TENANT_SERVICE_URL=http://localhost:8083
NOTIFICATION_SERVICE_URL=http://localhost:8084
SYSTEM_CONFIG_SERVICE_URL=http://localhost:8085
